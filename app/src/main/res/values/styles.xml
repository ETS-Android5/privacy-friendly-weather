<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLightTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLightTheme</item>
        <item name="colorAccent">@color/colorAccentLightTheme</item>
        <item name="gray">@color/middlegrey</item>
        <item name="cardBackgroundColor">@color/cardBackgroundLightTheme</item>
        <item name="activityBackgroundColor">@color/white</item>
        <item name="headingTextColor">@color/colorPrimaryLightTheme</item>
        <item name="inverseTextColor">@color/white</item>
        <item name="circleColor">@color/transorange</item>
        <item name="rectangleColor">@color/transparent</item>
        <item name="textColor">@color/textColorLightTheme</item>

        <item name="circlebackground">@drawable/backgroundcircle_icons_day</item>
        <item name="rectanglebackground">@drawable/backgroundrectangle_drops_day</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AutocompleteTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/textColorLightTheme</item>
    </style>


</resources>
