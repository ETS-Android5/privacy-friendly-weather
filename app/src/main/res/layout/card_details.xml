<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundBlue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="@string/card_details_heading"
            android:id="@+id/activity_city_weather_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />


        <GridLayout
            android:id="@+id/activity_city_weather_rain_grid"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:columnCount="13"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_city_weather_tv_rain60min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/rain60min_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image1"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="1"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image2"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="2"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image3"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="3"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image4"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="4"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image5"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="5"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image6"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="6"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image7"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="7"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image8"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="8"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image9"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="9"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image10"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="10"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image11"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="11"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />

            <ImageView
                android:id="@+id/activity_city_weather_rain_image12"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="12"
                android:scaleType="centerInside"
                android:src="@drawable/emptydrop" />
        </GridLayout>


        <GridLayout
            android:id="@+id/activity_city_weather_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:columnCount="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/activity_city_weather_tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="1"
                android:text="@string/activity_city_weather_tv_humidity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/activity_city_weather_tv_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/activity_city_weather_tv_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="2"
                android:text="@string/activity_city_weather_tv_pressure"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/activity_city_weather_tv_pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="2"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/activity_city_weather_tv_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="3"
                android:text="@string/activity_city_weather_tv_wind_speed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/activity_city_weather_tv_wind_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

        </GridLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>