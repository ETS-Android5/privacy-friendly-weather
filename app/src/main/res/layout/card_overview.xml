<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <ImageView
        android:id="@+id/activity_city_weather_image_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/activity_city_weather_iv_description"
        android:scaleType="centerCrop"
        android:src="@drawable/weather_image_sunny" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/activity_city_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/rounded_corner"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/activity_city_weather_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:textSize="15dp"
        android:textColor="?attr/colorPrimary"
        android:background="@drawable/rounded_corner"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp" />

</androidx.cardview.widget.CardView>